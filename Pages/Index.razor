@code {
    static Chapitre About = new Chapitre();
    static Chapitre Training = new Chapitre();
    static Chapitre Experience = new Chapitre();
    static Chapitre Skill = new Chapitre();
    static Chapitre Hobby = new Chapitre();
    static Chapitre[] chapitres = { About, Training, Experience, Skill, Hobby };
    static List<Chapitre> Chapitres = new List<Chapitre>(chapitres);


    public class Chapitre
    {
        public string Visibility = "none";
        public bool AnimOn = false;
        public bool AnimOff = true;

        public async void Go()
        {
        await VisibilityChecker();
        this.AnimOff = false;

        this.Visibility = "normal";
        this.AnimOn = true;
    }

    public void GoInvisible()
    {
        this.Visibility = "none";
    }

    public static async Task<int> Reset()
    {
        foreach (Chapitre Chap in Chapitres)
        {
            if (Chap.AnimOff == false && Chap.AnimOn == true)
            {
                Chap.AnimOn = false;
                Chap.AnimOff = true;
            }
        }
        return 1;
    }
    public static async Task<int> VisibilityChecker()
    {
        await Reset();
        return 1;
    }

}



